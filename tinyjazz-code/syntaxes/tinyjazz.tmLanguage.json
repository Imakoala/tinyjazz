{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tinyjazz",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.other.tinyjazz",
				"match": "\\b(if|then|else|end if)\\b"
			},
			{
				"name": "keyword.tinyjazz",
				"match": "\\b(module|const|fn)\\b"
			},
			{
				"name": "storage.type.tinyjazz",
				"match": "\\b(shared|init|use|reset)\\b"
			},
			{
				"name": "keyword.control.tinyjazz",
				"match": "([^\\s:]*:|until|unless)"
			},
			{
				"name": "keyword.operator.tinyjazz",
				"match": "(==|=|->|\\||;|\\^|\\+|\\*|or|and|xor|nand|\\\\|-)"
			},
			{
				"name": "constant.numeric.tinyjazz",
				"match": "([0-9]+|true|false)"
			},
			{
				"name": "entity.name.function.tinyjazz",
				"match": "([a-zA-Z_][^\\s\\(\\)\\[\\]\\<\\>,\\-]*((?=<)|(?=\\()))"
			},
			{
				"name": "variable.tinyjazz",
				"match": "([a-zA-Z_][^\\s\\(\\)\\[\\]\\<\\>,\\-]*)"
			},
			{
				"name": "comment.line.tinyjazz",
				"match": "//[^\n]*"
			}]
		}
	},
	"scopeName": "source.tj"
}
